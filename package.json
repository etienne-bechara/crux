{
  "name": "@bechara/nestjs-core",
  "version": "4.10.0",
  "description": "Core Components for NestJS Projects",
  "author": {
    "name": "Etienne Bechara",
    "email": "bechara.etienne@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/etienne-bechara/nestjs-core"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**"
  ],
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "prepare": "husky install .config/husky",
    "dev": "tsnd --exit-child --rs --watch *.env --inspect=0.0.0.0:9229 ./example/source/main.ts",
    "dev:metrics": "cd example && docker-compose down && docker-compose up -d --build && pnpm dev",
    "build": "rimraf ./dist && pnpm run build:index && tsc -p tsconfig.build.json && pnpm run build:assets && pnpm run build:cleanup",
    "build:index": "rimraf ./source/index.ts && barrelsby -q -e \\.spec\\.ts$ -d ./source",
    "build:assets": "copyfiles -u 1 ./source/redoc/redoc.handlebars ./dist/",
    "build:cleanup": "rimraf ./source/index.ts",
    "lint": "export TIMING=1 || set TIMING=1&& eslint **/*.ts --max-warnings=0",
    "test": "jest --verbose --forceExit --passWithNoTests --testTimeout=30000 --config .config/jest/.jestrc.json"
  },
  "dependencies": {
    "@nestjs/common": "8.4.0",
    "@nestjs/core": "8.4.0",
    "@nestjs/platform-fastify": "8.4.0",
    "@nestjs/swagger": "5.2.0",
    "@opentelemetry/api": "1.1.0",
    "@opentelemetry/exporter-trace-otlp-http": "0.27.0",
    "@opentelemetry/resources": "1.1.0",
    "@opentelemetry/sdk-trace-base": "1.1.0",
    "@opentelemetry/semantic-conventions": "1.1.0",
    "@sentry/node": "6.18.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "cycle": "1.0.3",
    "dotenv": "16.0.0",
    "fast-glob": "3.2.11",
    "fastify-swagger": "5.0.0",
    "got": "11.8.3",
    "handlebars": "4.7.7",
    "nestjs-redoc": "2.2.2",
    "point-of-view": "5.1.0",
    "prom-client": "14.0.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.4",
    "source-map-support": "0.5.21",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@bechara/eslint-config-bechara-ts": "1.4.0",
    "@commitlint/cli": "16.2.1",
    "@commitlint/config-conventional": "16.2.1",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.21",
    "@types/uuid": "8.3.4",
    "barrelsby": "2.3.3",
    "copyfiles": "2.4.1",
    "eslint": "8.11.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.3",
    "ts-node-dev": "1.1.8",
    "typescript": "4.6.2"
  }
}
