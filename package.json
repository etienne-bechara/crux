{
  "name": "@bechara/nestjs-core",
  "version": "3.3.1",
  "description": "Core Components for NestJS Projects",
  "author": {
    "name": "Etienne Bechara",
    "email": "bechara.etienne@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/etienne-bechara/nestjs-core"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**"
  ],
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "prepare": "husky install .config/husky",
    "dev": "tsnd --exit-child --rs --watch *.env --inspect=0.0.0.0:9229 ./test/main.ts",
    "build": "npx rimraf ./dist && pnpm run index && tsc -p tsconfig.build.json && npx rimraf ./source/index.ts",
    "index": "npx rimraf ./source/index.ts && npx barrelsby -q -e \\.spec\\.ts$ -e test -d ./source",
    "lint": "export TIMING=1 || set TIMING=1&& eslint **/*.ts --max-warnings=0",
    "test": "jest --verbose --forceExit --passWithNoTests --config .config/jest/jest.config.js"
  },
  "dependencies": {
    "@nestjs/common": "8.2.0",
    "@nestjs/core": "8.2.0",
    "@nestjs/platform-fastify": "8.2.0",
    "@sentry/node": "6.14.3",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "cycle": "1.0.3",
    "dotenv": "10.0.0",
    "fast-glob": "3.2.7",
    "got": "11.8.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.4.0",
    "source-map-support": "0.5.20"
  },
  "devDependencies": {
    "@bechara/eslint-config-bechara-ts": "1.3.0",
    "@commitlint/cli": "14.1.0",
    "@commitlint/config-conventional": "14.1.0",
    "@types/jest": "27.0.2",
    "@types/node": "16.11.7",
    "chalk": "4.1.2",
    "eslint": "8.2.0",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "lint-staged": "11.2.6",
    "ts-jest": "27.0.7",
    "ts-node-dev": "1.1.8",
    "typescript": "4.4.4"
  }
}
