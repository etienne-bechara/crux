{
  "name": "@bechara/nestjs-core",
  "version": "3.1.3",
  "description": "Core Components for NestJS Projects",
  "author": {
    "name": "Etienne Bechara",
    "email": "bechara.etienne@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/etienne-bechara/nestjs-core"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**"
  ],
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "prepare": "husky install .config/husky",
    "dev": "tsnd --exit-child --rs --watch *.env --inspect=0.0.0.0:9229 ./source/test/test.main.ts",
    "build": "npx rimraf ./dist && pnpm run index && tsc -p tsconfig.build.json && npx ncp ./source ./dist/source && npx rimraf ./source/index.ts",
    "index": "npx rimraf ./source/index.ts && npx barrelsby -q -e \\.spec\\.ts$ -e test -d ./source",
    "lint": "export TIMING=1 || set TIMING=1&& eslint **/*.ts --max-warnings=0",
    "test": "jest --verbose --forceExit --passWithNoTests --config .config/jest/jest.config.js"
  },
  "dependencies": {
    "@nestjs/common": "8.0.6",
    "@nestjs/core": "8.0.6",
    "@nestjs/platform-fastify": "8.0.6",
    "@sentry/node": "6.12.0",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "cycle": "1.0.3",
    "dotenv": "10.0.0",
    "fast-glob": "3.2.7",
    "got": "11.8.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.3.0",
    "source-map-support": "0.5.20"
  },
  "devDependencies": {
    "@bechara/eslint-config-bechara-ts": "1.2.0",
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@nestjs/testing": "8.0.6",
    "@types/jest": "27.0.1",
    "@types/node": "16.9.2",
    "chalk": "4.1.2",
    "eslint": "7.32.0",
    "husky": "7.0.2",
    "jest": "27.2.0",
    "lint-staged": "11.1.2",
    "ts-jest": "27.0.5",
    "ts-node-dev": "1.1.8",
    "typescript": "4.4.3"
  }
}
