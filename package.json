{
  "name": "@bechara/nestjs-core",
  "version": "3.6.2",
  "description": "Core Components for NestJS Projects",
  "author": {
    "name": "Etienne Bechara",
    "email": "bechara.etienne@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/etienne-bechara/nestjs-core"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**"
  ],
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "prepare": "husky install .config/husky",
    "dev": "tsnd --exit-child --rs --watch *.env --inspect=0.0.0.0:9229 ./example/main.ts",
    "dev:metrics": "cd example && docker-compose up -d --force-recreate && pnpm dev",
    "build": "pnpx -y rimraf ./dist && pnpm run index && tsc -p tsconfig.build.json && pnpx -y rimraf ./source/index.ts",
    "index": "pnpx -y rimraf ./source/index.ts && pnpx -y barrelsby -q -e \\.spec\\.ts$ -d ./source",
    "lint": "export TIMING=1 || set TIMING=1&& eslint **/*.ts --max-warnings=0",
    "test": "jest --verbose --forceExit --passWithNoTests --testTimeout=30000 --config .config/jest/.jestrc.json"
  },
  "dependencies": {
    "@nestjs/common": "8.3.1",
    "@nestjs/core": "8.3.1",
    "@nestjs/platform-fastify": "8.3.1",
    "@sentry/node": "6.17.9",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "cycle": "1.0.3",
    "dotenv": "16.0.0",
    "fast-glob": "3.2.11",
    "got": "11.8.3",
    "prom-client": "14.0.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.4",
    "source-map-support": "0.5.21",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@bechara/eslint-config-bechara-ts": "1.4.0",
    "@commitlint/cli": "16.2.1",
    "@commitlint/config-conventional": "16.2.1",
    "@types/jest": "27.4.0",
    "@types/node": "17.0.18",
    "@types/uuid": "8.3.4",
    "eslint": "8.9.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "ts-jest": "27.1.3",
    "ts-node-dev": "1.1.8",
    "typescript": "4.5.5"
  }
}
