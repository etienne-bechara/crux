{
  "name": "@bechara/nestjs-core",
  "version": "3.5.1",
  "description": "Core Components for NestJS Projects",
  "author": {
    "name": "Etienne Bechara",
    "email": "bechara.etienne@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/etienne-bechara/nestjs-core"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**"
  ],
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "prepare": "husky install .config/husky",
    "dev": "tsnd --exit-child --rs --watch *.env --inspect=0.0.0.0:9229 ./example/main.ts",
    "build": "pnpx -y rimraf ./dist && pnpm run index && tsc -p tsconfig.build.json && pnpx -y rimraf ./source/index.ts",
    "index": "pnpx -y rimraf ./source/index.ts && pnpx -y barrelsby -q -e \\.spec\\.ts$ -d ./source",
    "lint": "export TIMING=1 || set TIMING=1&& eslint **/*.ts --max-warnings=0",
    "test": "jest --verbose --forceExit --passWithNoTests --testTimeout=30000 --config .config/jest/.jestrc.json"
  },
  "dependencies": {
    "@nestjs/common": "8.2.6",
    "@nestjs/core": "8.2.6",
    "@nestjs/platform-fastify": "8.2.6",
    "@sentry/node": "6.17.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "cycle": "1.0.3",
    "dotenv": "14.3.0",
    "fast-glob": "3.2.11",
    "got": "11.8.3",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.2",
    "source-map-support": "0.5.21"
  },
  "devDependencies": {
    "@bechara/eslint-config-bechara-ts": "1.3.0",
    "@commitlint/cli": "16.1.0",
    "@commitlint/config-conventional": "16.0.0",
    "@types/jest": "27.4.0",
    "@types/node": "17.0.12",
    "eslint": "8.7.0",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "ts-jest": "27.1.3",
    "ts-node-dev": "1.1.8",
    "typescript": "4.5.5"
  }
}
