{
  "name": "@bechara/crux",
  "version": "4.31.5",
  "description": "Node.js backend package including: framework (NestJS), HTTP server (Fastify), HTTP client (GOT), distributed caching (ioredis), ORM (MikroORM), swagger documentation (Redoc), logger (Loki and Slack), metrics (Prometheus) and tracing (Tempo with OpenTelemetry).",
  "author": {
    "name": "Etienne Bechara",
    "email": "bechara.etienne@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/etienne-bechara/crux"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**"
  ],
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "prepare": "husky install .config/husky",
    "dev": "tsnd --exit-child --rs --watch *.env --inspect=0.0.0.0:9229 ./dev/main.ts",
    "example": "pnpm example:build && cd example && docker-compose up --build",
    "example:build": "rimraf ./example/application/crux && pnpm build && pnpm example:assets",
    "example:assets": "copyfiles -u 1 ./dist/**/* ./example/application/crux/ && copyfiles ./package.json ./pnpm-lock.yaml ./example/application/crux/",
    "build": "rimraf ./dist && pnpm build:index && tsc -p tsconfig.build.json && pnpm build:assets && pnpm build:cleanup",
    "build:index": "rimraf ./source/index.ts && barrelsby -q -e \\.spec\\.ts$ -d ./source",
    "build:assets": "copyfiles -u 1 ./source/doc/doc.handlebars ./dist/",
    "build:cleanup": "rimraf ./source/index.ts",
    "lint": "export TIMING=1 || set TIMING=1&& eslint **/*.ts --max-warnings=0",
    "test": "pnpm test:up && pnpm test:jest && pnpm test:down",
    "test:up": "cd test && docker compose up -d",
    "test:jest": "jest --forceExit --config .config/jest/.jestrc.json",
    "test:down": "cd test && docker compose down"
  },
  "dependencies": {
    "@mikro-orm/core": "5.4.2",
    "@mikro-orm/mysql": "5.4.2",
    "@mikro-orm/nestjs": "5.1.2",
    "@mikro-orm/postgresql": "5.4.2",
    "@nestjs/common": "8.4.4",
    "@nestjs/core": "8.4.4",
    "@nestjs/platform-fastify": "8.4.4",
    "@nestjs/swagger": "5.2.1",
    "@opentelemetry/api": "1.0.4",
    "@opentelemetry/context-async-hooks": "1.0.1",
    "@opentelemetry/exporter-trace-otlp-http": "0.27.0",
    "@opentelemetry/propagator-b3": "1.0.1",
    "@opentelemetry/resources": "1.0.1",
    "@opentelemetry/sdk-trace-base": "1.0.1",
    "@opentelemetry/semantic-conventions": "1.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "cycle": "1.0.3",
    "dotenv": "16.0.0",
    "fast-glob": "3.2.11",
    "fastify-swagger": "5.1.0",
    "got": "11.8.3",
    "handlebars": "4.7.7",
    "httpsnippet": "2.0.0",
    "ioredis": "5.2.3",
    "nestjs-redoc": "2.2.2",
    "point-of-view": "5.2.0",
    "prom-client": "14.0.1",
    "protobufjs": "7.0.0",
    "query-string": "7.1.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.5",
    "snappy": "7.1.2",
    "source-map-support": "0.5.21",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@bechara/eslint-config-bechara-ts": "1.4.1",
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@types/httpsnippet": "1.23.1",
    "@types/jest": "28.1.6",
    "@types/node": "18.6.5",
    "@types/supertest": "2.0.12",
    "@types/uuid": "8.3.4",
    "barrelsby": "2.4.0",
    "copyfiles": "2.4.1",
    "eslint": "8.21.0",
    "husky": "8.0.1",
    "jest": "28.1.3",
    "jest-sonar-reporter": "2.0.0",
    "rimraf": "3.0.2",
    "supertest": "6.2.4",
    "ts-jest": "28.0.7",
    "ts-node-dev": "2.0.0",
    "typescript": "4.7.4"
  }
}
