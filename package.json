{
  "name": "@bechara/nestjs-core",
  "version": "2.1.0",
  "description": "Core Components for NestJS Projects",
  "author": {
    "name": "Etienne Bechara",
    "email": "bechara.etienne@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/etienne-bechara/nestjs-core"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**"
  ],
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "prepare": "husky install .config/husky",
    "start": "tsnd --exit-child --transpile-only --watch *.env --inspect=0.0.0.0:9229 ./source/test/test.main.ts",
    "build": "npx rimraf ./dist && pnpm run index && tsc -p tsconfig.build.json && npx ncp ./source ./dist/source && npx rimraf ./source/index.ts",
    "index": "npx rimraf ./source/index.ts && npx barrelsby -q -e \\.spec\\.ts$ -e test -d ./source",
    "lint": "eslint **/*.ts --max-warnings=0",
    "test": "jest --verbose --forceExit --passWithNoTests --config .config/jest/jest.config.js"
  },
  "dependencies": {
    "@nestjs/common": "7.6.15",
    "@nestjs/core": "7.6.15",
    "@nestjs/platform-express": "7.6.15",
    "@sentry/node": "6.3.0",
    "@types/express": "4.17.11",
    "axios": "0.21.1",
    "axios-cache-adapter": "2.7.3",
    "chalk": "4.1.1",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "cycle": "1.0.3",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "globby": "11.0.3",
    "jsonwebtoken": "8.5.1",
    "qs": "6.10.1",
    "reflect-metadata": "0.1.13",
    "request-ip": "2.1.3",
    "rxjs": "6.6.7",
    "source-map-support": "0.5.19",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@bechara/eslint-config-bechara-ts": "1.1.3",
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "@nestjs/testing": "7.6.15",
    "@types/jest": "26.0.22",
    "@types/node": "14.14.41",
    "eslint": "7.24.0",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "ts-jest": "26.5.5",
    "ts-node-dev": "1.1.6",
    "typescript": "4.2.4"
  }
}
